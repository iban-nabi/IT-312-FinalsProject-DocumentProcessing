doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='icon' type='image/slu-icon' href='../public/images/slu-logo.png')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css')
    link(rel='stylesheet', href='../public/styles/reusable-files/style.css')
    title Document Reviewer
  body
    special-login-header
    .container-fluid.p-0.m-0.bg-white
      .d-sm-flex.m-0.p-0
        img.w-50.d-none.d-sm-block(src='../../public/images/slu-main.jpg', alt='slu_building', style='background-size: cover;')
        .d-flex.flex-column.align-items-center.justify-content-center
          img.img-fluid.w-50.justify-content-center.w-sm-25.pt-5(src='../../public/images/slu-logo.png', alt='slu_logo')
          h1.text-center.text-darkblue.mb-0 User Login
          h4.text-center.text-darkblue.mb-2 Document Review System
          form#form(action='/login', method='POST')
            .input-group.mb-2
              .input-group-prepend
                span.input-group-text.prepend-color
                  i.bi.bi-person-fill.color-white
              input#username.form-control.input-color(type='text', name='username', placeholder='Username')
            .input-group.mb-2
              .input-group-prepend
                span.input-group-text.blue-border.prepend-color
                  i.bi.bi-lock-fill.color-white
              input#password.form-control.input-color(type='password', name='password', placeholder='Password')
            #button.my-3.text-center.btn-block
              button.btn.btn-warning(type='submit', name='submit', onclick="login()") Login
          if error
            p.text-center.text-danger.mb-0.pb-5 #{error}
    special-footer
