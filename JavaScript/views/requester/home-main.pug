doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Requester
    link(rel='icon' type='image/slu-icon' href='../../public/images/slu-logo.png')  
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css')
    link(rel='stylesheet', href='../../public/styles/requester/style.css') 
    link(rel='stylesheet', href='../../public/styles/reusable-files/style.css')

  body
    special-requester-header
    .img-background(style="background-image: url('../../public/images/website-background.png');")
      .px-5.pt-5
        each item in userDetails
          p.fs-3.text-darkblue.text-center.mb-0 Logged in as: 
            span.fw-bolder #{user}
          p.fs-1.text-darkblue.text-center.mb-0 
            | Welcome 
            span.fw-bolder #{fname} #{lname}
            |!
          p.fs-2.text-darkblue.text-center.mb-0 
            | From: 
            span.fw-bolder #{item.school_name}
      .p-5
        .d-inline.align-content-sm-stretch
          .row
            .col-md-4.col-lg-2.col-sm-4.col.pb-5
                button.btn.submit.bi.bi-box-arrow-in-down.text-light.position-relative.text-center.fw-bold(type='button', onclick='window.location.href="/submit-document"')
                  span
                    | Submit a document
                .sort.color-sort.color.rounded.pl-4
                  p.text-white.pt-3.fw-bold Sort By:
                  .form-check
                    input#sortByTitle.form-check-input(type='radio', name='sortBy')
                    label.form-check-label.text-white(for='sortByTitle')
                      | Title
                  .form-check
                    input#sortByStatus.form-check-input(type='radio', name='sortBy')
                    label.form-check-label.text-white(for='sortByStatus') Status
                  .form-check
                    input#sortByDate.form-check-input(type='radio', name='sortBy', checked="")
                    label.form-check-label.text-white(for='sortByDate') Date
                  hr.border-white
                  p.text-white.fw-bold Order By:
                  .form-check
                    input#orderByAscending.form-check-input(type='radio', name='orderBy')
                    label.form-check-label.text-white(for='orderByAscending') Ascending
                  .form-check
                    input#orderByDescending.form-check-input(type='radio', name='orderBy', checked="")
                    label.form-check-label.text-white(for='orderByDescending') Descending
            .col-md-8.col-lg-10.col-sm-8.col.mb-5
              .start-left.text-light.pt-3.rounded.bg-color.d-grid.gap-2.text-start.px-lg-5.px-2.pb-5
                input#menu-bar(type='checkbox', name='menu')
                .toggle
                  span.top_line.common
                  span.middle_line.common
                  span.bottom_line.common
                ul#navLinks.menu-selection
                  p.text-white.pt-3.fw-bold.mb-0 Sort By:
                  .form-check
                    input#sortByTitle(type='radio', name='sortBy', value='title')
                    label.form-check-label.text-white(for='sortByTitle')
                      |  Title
                  .form-check
                    input#sortByStatus(type='radio', name='sortBy', value='status',checked='')
                    label.form-check-label.text-white(for='sortByStatus')  Status
                  .form-check
                    input#sortByDate(type='radio', name='sortBy', value='date')
                    label.form-check-label.text-white(for='sortByDate')  Date
                  hr.border-white
                  p.text-white.fw-bold.mb-0 Order By:
                  .form-check
                    input#orderByAscending(type='radio', name='orderBy', value='asc')
                    label.form-check-label.text-white(for='orderByAscending')  Ascending
                  .form-check
                    input#orderByDescending(type='radio', name='orderBy', value='desc',checked='')
                    label.form-check-label.text-white(for='orderByDescending')  Descending
                  button.btn.sort-submit.bi.bi-box-arrow-in-down.text-light.text-center.fw-bold(type='button')
                    span
                    |  Apply
                h1.fw-bold Submitted Documents
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
                #table-res.color-white
                  table.table.table-striped
                    thead.color.text-light
                      tr
                        th(scope='col') Title of Document
                        th(scope='col') Status
                        th(scope='col') Request Date
                        th(scope='col') Action
                    tbody
                      each item in finalData
                        tr
                          th.th-color #{item.doc_title}
                          th.th-color #{item.current_status}
                          th.th-color #{item.req_date}
                          th.th-color
                            button.btn.button.color.bi.bi-eye-fill(type='button', onclick=`window.location.href='/document-details/${item.doc_id}'`, id=item.doc_id)
                              span
                              |  View
    br
    br
    br
    br
    special-footer
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
    script(src='/public/scripts/common/script.js')
    script(type="module" src="/public/scripts/common/show-alert.js")
    script(type="module" src='/public/scripts/requester/requester-header-functionalities.js')
    script(src='/public/scripts/requester/radio-buttons.js')
