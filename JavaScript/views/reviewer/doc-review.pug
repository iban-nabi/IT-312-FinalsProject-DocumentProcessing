  body
    special-reviewer-header
    .reviewer-container
      .reviewer-container-back.bg-white.rounded-bottom.mb-5.border
        .img-background(style="background-image: url('../../public/images/website-background.png');")
          .px-5.pt-5
            div.reviewer-container-back.bg-white.p-3.rounded-4
              //- Essential information stored in elements to be accessed via JavaScript. Needed for the funtionality of the API.
              span#filename-pdf #{filenamePDF}
              span#requester #{requester}
              span#pdfname #{pdfName}
              span#doctype #{docType}
              span#docsize #{docSize} MB
              span#pagenum #{pageNum}
              span#reqdate #{reqDate}
              span#version #{pdfVersion}
              span#user #{user}
              span#revofcid #{revofcid}
              span#remarks #{remarksText}
              //- Element to be targeted by the API, which is where it will be rendered.
              div#viewer
